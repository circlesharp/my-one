.poster-wrap {
  position: relative;
  margin-bottom: 20px;
  width: 100%;
  height: 400rpx;
}
.poster-wrap .poster {
  display: block;
  width: 100%;
  height: 400rpx;
  border-radius: 10px;
}
.poster-wrap .title {
  position: absolute;
  bottom: 40rpx;
  left: 20rpx;
  color: #fff;
}
