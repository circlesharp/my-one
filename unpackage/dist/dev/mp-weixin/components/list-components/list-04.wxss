.list-wrap {
  border-radius: 10px;
  overflow: hidden;
  -webkit-box-shadow: 0 0 10px rgba(0,0,0,0.05);
          box-shadow: 0 0 10px rgba(0,0,0,0.05);
}
.list-wrap image {
  display: block;
}
.list-wrap.full {
  width: 100%;
  height: 480rpx;
}
.list-wrap.full .img-wrap {
  width: 100%;
  height: 400rpx;
}
.list-wrap.full .img-wrap image {
  width: 100%;
  height: 100%;
}
.list-wrap.full .desc-wrap {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.list-wrap.full .desc-wrap .title {
  display: block;
  padding-left: 50rpx;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-wrap.half {
  width: 316rpx;
  height: 290rpx;
}
.list-wrap.half .img-wrap {
  width: 100%;
  height: 208rpx;
}
.list-wrap.half .img-wrap image {
  width: 100%;
  height: 208rpx;
}
.list-wrap.half .desc-wrap {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.list-wrap.half .desc-wrap .title {
  padding: 0;
  color: #929292;
  font-size: 12px;
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-wrap.masonry {
  position: relative;
  width: 330rpx;
  -webkit-box-shadow: 0 0 10px rgba(0,0,0,0.15);
          box-shadow: 0 0 10px rgba(0,0,0,0.15);
}
.list-wrap.masonry .img-wrap {
  width: 330rpx;
  height: 330rpx;
}
.list-wrap.masonry .img-wrap image {
  width: 330rpx;
  height: 330rpx;
}
.list-wrap.masonry .like-wrap {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,0.1);
  font-size: 45rpx;
  color: rgba(255,255,255,0.15);
  text-align: center;
}
.list-wrap.masonry .desc-wrap {
  margin: 50rpx 20rpx;
  line-height: 20px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-wrap.masonry .desc-wrap .text {
  font-size: 14px;
  font-weight: 500;
}
.list-wrap.masonry .detail-wrap {
  color: #bebebe;
  font-size: 12px;
  display: block;
  margin: 30rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-wrap.masonry .detail-wrap text {
  display: block;
}

