.comment-list {
  padding: 30rpx 0;
}
.comment-list .detail-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 40rpx;
}
.comment-list .detail-wrap image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.comment-list .detail-wrap text {
  font-size: 15px;
  color: #999;
}
.comment-list .detail-wrap .author {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-left: 25rpx;
}
.comment-list .content-wrap {
  margin: 20rpx 0 20rpx 40rpx;
  line-height: 25px;
  font-size: 15px;
  color: #666;
}
.comment-list .function-wrap {
  position: relative;
  height: 35rpx;
}
.comment-list .function-wrap > view {
  position: absolute;
  right: 60rpx;
}

